{
	"info": {
		"_postman_id": "qr-albums-api",
		"name": "QR Albums API",
		"description": "Complete API collection for QR Albums project",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "project_id",
			"value": "",
			"type": "string"
		},
		{
			"key": "album_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('auth_token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"register"
							]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('auth_token', response.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"auth",
								"login"
							]
						}
					}
				}
			]
		},
		{
			"name": "Projects",
			"item": [
				{
					"name": "Create Project",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('project_id', response.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test Project\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/projects",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects"
							]
						}
					}
				},
				{
					"name": "Get Projects",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/projects",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects"
							]
						}
					}
				},
				{
					"name": "Get Project Detail",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/projects/{{project_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects",
								"{{project_id}}"
							]
						}
					}
				}
			]
		},
		{
			"name": "Albums",
			"item": [
				{
					"name": "Create Album",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.collectionVariables.set('album_id', response.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Test Album\",\n    \"selectionLimit\": 10\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/projects/{{project_id}}/albums",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"projects",
								"{{project_id}}",
								"albums"
							]
						}
					}
				},
				{
					"name": "Get Album Detail",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/albums/{{album_id}}",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"albums",
								"{{album_id}}"
							]
						}
					}
				},
				{
					"name": "Get Selection Summary",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/albums/{{album_id}}/selections/summary",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"albums",
								"{{album_id}}",
								"selections",
								"summary"
							]
						}
					}
				},
				{
					"name": "Finalize Album",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"itemIds\": [1, 2, 3]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/albums/{{album_id}}/finalize",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"albums",
								"{{album_id}}",
								"finalize"
							]
						}
					}
				}
			]
		},
		{
			"name": "Media Upload",
			"item": [
				{
					"name": "Upload Image with Watermark",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								},
								{
									"key": "kind",
									"value": "IMAGE",
									"type": "text"
								},
								{
									"key": "watermarkEnabled",
									"value": "true",
									"type": "text"
								},
								{
									"key": "watermarkText",
									"value": "Â© EarthInfo Systems",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/albums/{{album_id}}/items",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"albums",
								"{{album_id}}",
								"items"
							]
						}
					}
				},
				{
					"name": "Upload Video",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": []
								},
								{
									"key": "kind",
									"value": "VIDEO",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/albums/{{album_id}}/items",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"albums",
								"{{album_id}}",
								"items"
							]
						}
					}
				}
			]
		},
		{
			"name": "Public Viewer",
			"item": [
				{
					"name": "Get Album by Slug",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "GET",
						"url": {
							"raw": "{{baseUrl}}/a/testslug",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"a",
								"testslug"
							]
						}
					}
				},
				{
					"name": "Create Session",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"url": {
							"raw": "{{baseUrl}}/a/testslug/sessions",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"a",
								"testslug",
								"sessions"
							]
						}
					}
				},
				{
					"name": "Submit Selections",
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"sessionKey\": \"example-session-key\",\n    \"itemIds\": [1, 2, 3]\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/a/testslug/selections",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"a",
								"testslug",
								"selections"
							]
						}
					}
				}
			]
		}
	]
}